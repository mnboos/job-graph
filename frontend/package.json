{
  "name": "frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "npm run type-check && npm run build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "update:api:export_schema": "cd ../backend && call .venv/scripts/activate && task export_openapi_schema",
    "update:api:generate_client": "openapi-generator-cli generate -g typescript-fetch -i ../backend/api_schema.json --remove-operation-id-prefix -o src/api/ --additional-properties=useSingleRequestParameter=true,supportsES6=true,disallowAdditionalPropertiesIfNotPresent=false",
    "update:api": "npm run update:api:export_schema && npm run update:api:generate_client"
  },
  "dependencies": {
    "@mapbox/vector-tile": "^2.0.4",
    "@quasar/extras": "^1.17.0",
    "@tanstack/vue-query": "^5.90.1",
    "@tanstack/vue-query-devtools": "^5.90.1",
    "leaflet": "^1.9.4",
    "leaflet-vector-tile-layer": "^0.16.1",
    "pbf": "^4.0.1",
    "quasar": "^2.18.5",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.23.4",
    "@playwright/test": "^1.53.1",
    "@quasar/vite-plugin": "^1.10.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/leaflet": "^1.9.20",
    "@types/node": "^22.15.32",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/eslint-plugin": "^1.2.7",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.29.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "~10.2.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "prettier": "3.5.3",
    "typescript": "~5.8.0",
    "vite": "^7.0.0",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10"
  },
  "prettier": {
    "tabWidth": 4,
    "singleQuote": false,
    "printWidth": 120,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "ignore"
  }
}
